<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Content</th>
      <th>UserID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost, class:"w3-button w3-aqua" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost),  class:"w3-button w3-aqua" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' },  class:"w3-button w3-aqua" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path, class:"w3-button w3-block w3-grey" %>
